<% if user_signed_in? %>
  <h3>Friends List</h3>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr class='text-center'>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th>Created by</th>
        <th colspan="1"></th>
      </tr>
    </thead>
<%=  %>
    <tbody>
      <% @friends.each do |friend| %>
        <tr class='text-center'>
          <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td><%= friend.user.email if friend.user.present? %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, class: 'btn btn-sm btn-outline-danger d-flex justify-content-center', data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-info" %>
    <% unless params[:type].present? %>
      <%= link_to 'Show All Friends', friends_path(type: 'all'), class:"btn btn-primary" %>
    <% else %>
      <%= link_to 'Your Friends', friends_path, class:"btn btn-primary" %>
    <% end %>
  <% else %>

  <h1>Hello Beautiful People</h1>

<% end %>
