<div class="jumbotron">
  <h5 class="display-4"><%= @friend.first_name %>
    <%= @friend.last_name %></h5>
  <p class="lead"><%= "Email: #{@friend.email}" %></p>
  <p class="lead"><%= "Phone Number: #{@friend.phone}" %></p>
  <p class="lead"><%= "Twitter: #{@friend.twitter}" %></p>
  <hr class="my-4">

  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-sm btn-info my-2" %>
  <%= link_to 'Back', friends_path, class: "btn btn-sm btn-danger my-2" %>
  <%= link_to 'Destroy', @friends, method: :delete, class: 'btn btn-sm btn-outline-danger', data: { confirm: 'Are you sure?' } %>

</div>

